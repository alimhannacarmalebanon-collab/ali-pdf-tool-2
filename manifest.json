{
  "manifest_version": 3,
  "name": "Carma PDF Suite Pro",
  "version": "13.0",
  "description": "Professional PDF Tool for Carma. Works in background. Developed by Ali.",
  "action": { "default_title": "Carma PDF Master", "default_icon": "icon.png" },
  "icons": { "128": "icon.png" },
  "background": { "service_worker": "background.js" },
  "permissions": ["storage", "downloads"],
  "web_accessible_resources": [{
    "resources": ["libs/pdf.worker.min.js"],
    "matches": ["<all_urls>"]
  }]
}